# Environment Variables for Trip Planning Service
# Copy this file to .env and update with your actual values

# API Keys
TRIPADVISOR_API_KEY=your-tripadvisor-api-key-here
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here
OPENWEATHER_API_KEY=your-openweather-api-key-here

# MongoDB Configuration (for production)
MONGODB_URI=mongodb://admin:password123@localhost:27017/islandhop_trips?authSource=admin
MONGODB_USERNAME=admin
MONGODB_PASSWORD=password123

# User Services Integration
USER_SERVICE_BASE_URL=http://localhost:8081/api

# Service Configuration
SERVER_PORT=8083
SPRING_PROFILES_ACTIVE=development

# Logging Levels
LOGGING_LEVEL_COM_ISLANDHOP=DEBUG
LOGGING_LEVEL_ROOT=INFO

# JVM Configuration
JAVA_OPTS=-Xmx1024m -Xms512m -XX:+UseG1GC

# Recommendation Algorithm Tuning
RECOMMENDATION_MAX_DAILY_TRAVEL_HOURS=8
RECOMMENDATION_MAX_ATTRACTIONS_PER_DAY=4
RECOMMENDATION_SIMILARITY_THRESHOLD=0.7
